@model testsite.Views.Accept.Accept3ViewModel

@{
    ViewData["Title"] = "BlackWacateお申込み";
}
}

<h2>BlackWacateお申込み</h2>

<form asp-action="Accept3">
    <div class="form-horizontal">
        <h4>－SNSや社外活動について－</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Twitter" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Twitter" class="form-control" />
                <span asp-validation-for="Twitter" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RepeatCount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RepeatCount" class="form-control" />
                <span asp-validation-for="RepeatCount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="次へ" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-default">戻る</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
